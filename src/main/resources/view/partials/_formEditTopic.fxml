<TabPane prefHeight="384.0" fx:id="viewRoot" prefWidth="440.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="department.ui.controller.edit.EditTopicController">
   <tabs>
      <Tab text="Редагування">
         <content>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <HBox alignment="TOP_CENTER" GridPane.columnIndex="2">
                     <children>
                        <Label text="Редагування теми" GridPane.columnIndex="2">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Label GridPane.columnIndex="2">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <children>
                        <Label text="Назва теми" />
                        <TextField fx:id="titleField" />
                        <Label text="Замовник" />
                        <TextField fx:id="clientField" />
                        <HBox prefHeight="54.0" prefWidth="389.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Дата з">
                                       <HBox.margin>
                                          <Insets right="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <DatePicker fx:id="startDatePicker" prefHeight="25.0" prefWidth="189.0" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Дата по">
                                       <HBox.margin>
                                          <Insets right="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <DatePicker fx:id="endDatePicker" prefHeight="25.0" prefWidth="184.0" />
                                 </children>
                                 <HBox.margin>
                                    <Insets left="30.0" />
                                 </HBox.margin>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                        <Label text="Кафедра" />
                        <ComboBox fx:id="departmentComboBox" editable="true" maxWidth="1.7976931348623157E308" promptText="Кафедра" />
                        <FlowPane prefHeight="62.0" prefWidth="389.0" />
                        <Label text="Керівник" />
                        <ComboBox fx:id="teacherComboBox" editable="true" maxWidth="1.7976931348623157E308" styleClass="combo-box1" stylesheets="@../style.css" />
                        <FlowPane prefHeight="62.0" prefWidth="389.0" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onCreateTopic" text="Зберегти" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="editStatus" text="Error" />
               </children>
               <padding>
                  <Insets left="25.0" right="25.0" />
               </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
